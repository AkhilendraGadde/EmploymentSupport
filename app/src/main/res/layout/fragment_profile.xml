<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.charolia.gadde.ess.Fragments.ProfileFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:background="@color/white"
        android:foreground="?selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/activity_init_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="125dp"
                android:paddingBottom="10dp"
                android:background="@drawable/logo_ess"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/editProf" />

            <RelativeLayout
                android:id="@+id/inner_layout"
                android:layout_toEndOf="@+id/splash_logo"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_above="@+id/editProf">

                <TextView
                    android:id="@+id/tName"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tEmail"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tName"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:text="Email"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tType"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tEmail"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:text="Type"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:text="Tap to edit profile"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAccent"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/editProf"
                android:layout_below="@+id/splash_logo" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
